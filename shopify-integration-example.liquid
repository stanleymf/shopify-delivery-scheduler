        break;
        
      case 'POSTAL_CODE_VALIDATED':
        console.log('Postal code validated:', payload);
        // Update shipping methods or cart
        break;
        
      case 'DELIVERY_DATE_SELECTED':
        console.log('Delivery scheduled:', payload);
