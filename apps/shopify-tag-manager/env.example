# Shopify Private App Configuration
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_ACCESS_TOKEN=your_access_token_here

# App Configuration
PORT=3002
NODE_ENV=development

# Tag Management Configuration
AUTO_TAG_ENABLED=true
TAG_SYNC_INTERVAL=3600000
LOG_LEVEL=info

# Customer Segment Rules (JSON format)
CUSTOMER_SEGMENT_RULES='{
  "vip_customers": {
    "conditions": [
      {
        "field": "total_spent",
        "operator": "greater_than",
        "value": 1000
      }
    ],
    "tags": ["VIP", "High-Value"],
    "remove_tags": ["New-Customer"]
  },
  "new_customers": {
    "conditions": [
      {
        "field": "orders_count",
        "operator": "less_than_or_equal",
        "value": 1
      }
    ],
    "tags": ["New-Customer"],
    "remove_tags": ["VIP", "High-Value"]
  },
  "inactive_customers": {
    "conditions": [
      {
        "field": "last_order_date",
        "operator": "older_than_days",
        "value": 90
      }
    ],
    "tags": ["Inactive"],
    "remove_tags": ["Active", "VIP"]
  }
}' 